<%- include('../partials/head') -%>

<%- include('../partials/navbar') -%>

<main>
    <section>
        <h1>Add a Business</h1>
        <div id="centered-v1">
            <button class="reviews-button" type="button"><a href="/reviews">Back to Reviews</a> 
            </button>
        </div>
    </section>
        <hr>
    <section>

        <form action="" method="">

            <div class="business-review">
            
            <section>
                
                <div class="business-section">
                    <div>
                        <label for="businessname">Business Name :</label> 
                        <input type="text" id="businessname" name="businessname">
                    </div>
                </div>

            <section>
                <div class="business-section">
                    <div>
                        <label>
                            What category is this business under? Food or retail.
                            <select>
                                <option value="">--</option>
                                <option value="food">Food</option>
                                <option value="retail">Retail</option>
                            </select>
                        </label>
                    </div>

                    <div>
                        <label for="description">
                            Description of Business:
                            <textarea id="thecomment" name="description" rows="5" cols="30" maxlength="300" placeholder="Description of what the business serves or sells here... 300 characters max"></textarea>
                        </label>
                    </div>

                    <div>
                        <label for="locations">
                            Where is this business located? 
                            <textarea id="thecomment" name="locations" rows="5" cols="30" placeholder="Please type in the address."></textarea>
                        </label>
                    </div>

                    <div>
                        <div>
                            <label for="website">
                                Please provide the business website, if applicable: 
                            </label> 
                            <input type="text" id="website" name="website">
                        </div>
                    </div>
                </div> 

                    <div>
                        <div class="subheading">
                            <p>By submitting this review, you agree to our <a href="#">Terms & Privacy Agreement</a>.</p>
                            <div id="centered-v2">
                                <button type="submit" value="submit">Submit Business</button>
                            </div>
                        </div>
                    </div>


                  
            </section>
                
            </section>

            </div>

        </form>

    </section>
</main>

<%- include('../partials/footer') -%>