<main>
    <section class="heading">
        <h1>Write a Review</h1>
        <div id="centered-v1">
            <button type="button"><a href="/reviews">Back to Reviews</a> 
            </button>
        </div>
    </section>
        <hr>
    <section>
        
        <form action="/admin/" method="">
            
        <div class="business-review">
             <!-- <div class="name-section">
                    <label for="name">Your Name :</label>
