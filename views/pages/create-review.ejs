                </div> removing the name section (unnecessary)-->

        <section>
                <div class="business-section">
                <!-- <div>
                    <label for="businessname">Business Name :</label> 
                    <input type="text" id="businessname" name="businessname">
                </div> -->

                <div>
                    <label>
                    What would you rating this business? 
                    </label>
                        <select>
                        <option value="">--</option>
                        <option value="1">1 star</option>
                        <option value="2">2 stars</option>
                        <option value="3">3 stars</option>
                        <option value="4">4 stars</option>
                        <option value="5">5 stars</option>
                        </select>
                </div>
                </div>
        </section>

        <section>
            <div class="business-section">
                <div>
                    <label for="title">Review Title :</label>
                    <input type="text" id="title"> 
                </div>

                <div>
                   <label for="thecomment">My Review :</label>
                    <textarea id="thecomment" name="thecomment" rows="5" cols="30" maxlength="1000" placeholder="Your comments go here... 1000 characters max"></textarea>
                </div>
                
                <div>
                    <label>
                        Would you recommend this business? Select yes or no. 
                        <select>
                            <option value="">--</option>
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                    </label>
                </div>
              </div>
        </section>
    
            
